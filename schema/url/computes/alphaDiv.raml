#%RAML 1.0 Library

types:

  AlphaDivPluginRequest:
    type: ComputeRequestBase
    properties:
      config: AlphaDivComputeConfig

  # how do we want to ensure the collectionVariable is a collection variable?
  # presumably the compute service will check and err
  # but do we want to talk about constraints?
  AlphaDivComputeConfig:
    type: ComputeConfigBase
    properties:
      collectionVariable: VariableSpec
      alphaDivMethod: AlphaDivMethod

  AlphaDivMethod:
    type: string
    enum: ['shannon', 'simpson', 'evenness']
